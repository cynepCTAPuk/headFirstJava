<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CalcServlet</servlet-name>
        <servlet-class>servlets.CalcServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckAttributeServlet</servlet-name>
        <servlet-class>servlets.CheckOperationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalcServlet</servlet-name>
        <url-pattern>/CalcServlet?one=2&two=3&operation=multiply</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckAttributeServlet</servlet-name>
        <url-pattern>/CheckAttributeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
